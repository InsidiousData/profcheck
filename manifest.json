{
  "manifest_version": 2,
  "name": "ProfCheck",
  "description": "View Rate My Professors ratings directly in course browsers!",
  "version": "1.2.1",
  "background": {
    "scripts": [
      "js/lib/jquery-3.5.1.slim.min.js",
      "js/d.js",
      "js/constants.js",
      "js/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://courses.students.ubc.ca/cs/*"],
      "js": [
        "js/lib/jquery-3.5.1.slim.min.js",
        "js/lib/popper.min.js",
        "js/lib/tippy-bundle.umd.min.js",
        "js/d.js",
        "js/constants.js",
        "js/helpers.js",
        "js/content_ubc.js"
      ]
    },
    {
      "matches": [
        "https://coursefinder.utoronto.ca/course-search/search/courseInquiry?methodToCall=start&viewId=CourseDetails-InquiryView&courseId=*"
      ],
      "js": [
        "js/lib/jquery-3.5.1.slim.min.js",
        "js/lib/popper.min.js",
        "js/lib/tippy-bundle.umd.min.js",
        "js/d.js",
        "js/constants.js",
        "js/helpers.js",
        "js/content_uoft.js"
      ]
    }
  ],
  "permissions": ["https://*.ratemyprofessors.com/*", "alarms", "storage"],
  "icons": {
    "128": "icons/icon128.png",
    "48": "icons/icon48.png",
    "16": "icons/icon16.png"
  }
}
