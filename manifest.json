{
  "manifest_version": 2,
  "name": "ProfCheck",
  "description": "View Rate My Professors rating directly in UBC's course browser!",
  "version": "1.0",
  "background": {
    "scripts": ["jquery-3.5.1.slim.min.js", "background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://courses.students.ubc.ca/cs/*"],
      "js": ["jquery-3.5.1.slim.min.js", "content.js"]
    }
  ],
  "permissions": [
    "https://*.ratemyprofessors.com/*"
  ],
  "icons": {
    "128": "icon128.png"
  }
}
