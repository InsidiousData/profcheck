{
  "manifest_version": 2,
  "name": "ProfCheck",
  "description": "View Rate My Professors rating directly in UBC's course browser!",
  "version": "1.1.0",
  "background": {
    "scripts": ["js/jquery-3.5.1.slim.min.js", "js/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://courses.students.ubc.ca/cs/*"],
      "js": ["js/jquery-3.5.1.slim.min.js", "js/content.js"]
    }
  ],
  "permissions": ["https://*.ratemyprofessors.com/*", "alarms", "storage"],
  "icons": {
    "128": "icons/icon128.png"
  }
}
